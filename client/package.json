{
  "name": "client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:admin": "ng serve --project admin --port 4200",
    "start:backoffice": "ng serve --project backoffice --port 4201",
    "build": "NODE_ENV=production ng build --prod",
    "build:admin": "NODE_ENV=production ng build --prod --project admin",
    "build:backoffice": "NODE_ENV=production ng build --prod --project backoffice",
    "build:loading": "ng build --prod --project xyz-loading",
    "build:auth": "ng build --prod --project xyz-auth",
    "build:core": "ng build --prod --project xyz-core",
    "build:libs": "NODE_ENV=production npm run build:loading && npm run build:core && npm run build:auth",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.1",
    "@angular/common": "~12.0.1",
    "@angular/compiler": "~12.0.1",
    "@angular/core": "~12.0.1",
    "@angular/forms": "~12.0.1",
    "@angular/platform-browser": "~12.0.1",
    "@angular/platform-browser-dynamic": "~12.0.1",
    "@angular/router": "~12.0.1",
    "@ng-icons/core": "^12.4.0",
    "@ng-icons/heroicons": "^12.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.3.11",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.5",
    "@angular/cli": "~12.0.1",
    "@angular/compiler-cli": "~12.0.1",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/typography": "^0.4.1",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.0.0",
    "tailwindcss": "^2.2.19",
    "typescript": "~4.2.3"
  }
}
